# Example environment configuration for sluttools
# Copy to .env and customize as needed

# Library Configuration
# Comma-separated list of library root paths
SLUT_LIBRARY_ROOTS="/Volumes/MUSIC,/Volumes/ARCHIVE/MUSIC"

# Database Settings
# Path to SQLite database file
SLUT_DB_PATH="~/.config/sluttools/flibrary.db"

# Matching Output Paths
# Use {playlist_name} as placeholder for dynamic naming
SLUT_MATCH_OUTPUT_PATH_M3U="~/Music/Playlists/{playlist_name}.m3u"
SLUT_MATCH_OUTPUT_PATH_JSON="~/Music/Playlists/json/{playlist_name}.json"

# Matching Thresholds
# Auto-accept matches at or above this score (0-100)
SLUT_THRESHOLD_AUTO_MATCH=90

# Minimum score to send to review instead of auto-unmatched (0-100)
SLUT_THRESHOLD_REVIEW_MIN=75

# UI Settings
# Set to 1 to disable animated UI (useful for CI/headless environments)
SLUT_PLAIN=0

# Note: On first run, sluttools will prompt for LIBRARY_ROOTS and create
# ~/.config/sluttools/config.json if it doesn't exist
# Environment variables take precedence over config.json values
# See USAGE-CONFIG.md for full documentation
