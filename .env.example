# Example configuration for Music Automation Toolkit

# FLAC Library Directory
# Set this to the root directory of your FLAC collection
FLAC_LIBRARY_DIR="/Volumes/sad/MUSIC2"

# Database Settings
DATABASE_PATH="~/.flac_index.db"
CACHE_TTL=3600  # Cache time-to-live in seconds

# Matching Settings
AUTO_MATCH_THRESHOLD=65  # Automatic matching threshold (0-100)
QUICK_MATCH_THRESHOLD=50  # Playlist size threshold for Quick Match mode

# Performance Settings
MAX_WORKERS=8  # Maximum number of parallel processing workers
CACHE_ENABLED=true  # Enable/disable filename normalization caching

# Export Settings
DEFAULT_EXPORT_FORMAT="m3u"  # Default export format: m3u, csv, both
INCLUDE_METADATA=true  # Include metadata in exports

# Audio Processing
SOX_PATH="/usr/local/bin/sox"  # Path to SoX binary
METAFLAC_PATH="/usr/local/bin/metaflac"  # Path to metaflac binary
