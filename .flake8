[flake8]
# Set maximum line length to 150 characters (accommodate longer lines)
max-line-length = 150

# Ignore specific error codes that are too strict or handled by other tools
ignore = 
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # E226: missing whitespace around arithmetic operator
    E226,
    # E231: missing whitespace after ','
    E231,
    # E301: expected 1 blank line
    E301,
    # E704: multiple statements on one line
    E704,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # W504: line break after binary operator
    W504,
    # F401: module imported but unused (often needed for __init__.py or typing)
    F401,
    # F821: undefined name (often false positives)
    F821,
    # F841: local variable assigned but never used (often intentional)
    F841,
    # F541: f-string is missing placeholders (sometimes intentional for consistency)
    F541,

# Exclude common directories that don't need linting
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .eggs,
    .mypy_cache,
    .pytest_cache,

# Per-file ignores for specific issues
per-file-ignores =
    # Allow unused imports in __init__.py files (they're often re-exported)
    __init__.py:F401,F403
    # Allow unused imports in conftest.py (pytest fixtures)
    conftest.py:F401
    # Ignore specific issues in archived/legacy code
    scripts/archive/*:E501,F401,F841
